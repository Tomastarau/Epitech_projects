NAME	=	arg_joiner

SRC = src/arg_joiner.c	\
	src/utils.c

MAIN = src/main.c

OBJ = $(SRC:.c=.o)

OBJ_MAIN = $(MAIN:.c=.o)

CFLAGS = -Wall -Wextra -I include

all: $(NAME)

$(NAME): $(OBJ) $(OBJ_MAI
	gcc -o $(NAME) $(OBJ) $(OBJ_MAIN)

clean:
	rm -f $(OBJ)

fclean : clean
	rm -f $(NAME)
	rm -f unit_tests
	rm -f *.gcda
	rm -f *.gcno
	rm -f *~

re: fclean all

unit_tests : clean
	gcc -o unit_tests $(SRC) test_stumper/test.c \
	-I./include/ --coverage -lcriterion -g

tests_run : unit_tests
		./unit_tests

run_tests : unit_tests
		./unit_tests

.PHONY: clean fclean all re NAME unit_tests tests_run run_tests
